extends layout

block content
  h1= title

  ul
    each val in userInstance_list
      li 
        a(href=val.url) #{val.user.userName} : #{val.user} - 
        if val.status=='Online'
          span.text-success #{val.status}
        else if val.status=='Offline'
          span.text-danger #{val.status}
        else
          span.text-warning #{val.status} 
        if val.status!='Unavailable'
          span  (last seen: #{val.user.last_login} )

    else
      li There are no book copies in this library.