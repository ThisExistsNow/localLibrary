extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='userName') username:
      input#userName.form-control(type='text', placeholder='Name of user' name='userName' required='true' value=(undefined===user ? '' : user.userName) )
    
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg